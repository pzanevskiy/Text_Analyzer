@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<h3>Выберите файл для загрузки</h3>
<form asp-action="Index" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" class="input-group" name="uploadedFile" accept=".txt, .pdf, .docx" /><br>
    <input type="submit" class="btn btn-success" value="Загрузить" />
</form>